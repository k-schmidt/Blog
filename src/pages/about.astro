---
import BaseLayout from '../layouts/BaseLayout.astro';
import "../styles/global.css";

const pageTitle = "About Me";

const identity = {
  firstName: "Kyle",
  lastName: "Schmidt",
  location: "Palo Alto, CA",
  title: "Staff Data Engineer",
  company: "Meta",
  education: "Columbia University",
  yearsExperience: "6+",
};

const skills = [
  "Data Engineering",
  "Python",
  "Clojure",
  "Distributed Systems",
  "A/B Testing",
  "Functional Programming",
  "Emacs",
];

const interests = [
  "Data Applications",
  "Free Software",
  "Process Optimization",
  "Metrics Analysis",
];

const skillColor = "crimson";
const fontWeight = "bold";
const textCase = "uppercase";
---

<BaseLayout pageTitle={pageTitle}>
  <style define:vars={{skillColor, fontWeight, textCase}}>
    h1 {
      color: purple;
      font-size: 4rem;
    }
    .skill {
      color: var(--skillColor);
      font-weight: var(--fontWeight);
      text-transform: var(--textCase);
    }
    .intro {
      font-size: 1.2rem;
      line-height: 1.6;
    }
    .section-title {
      margin-top: 2rem;
      color: #333;
    }
  </style>

  <p class="intro">
    Hi, I'm {identity.firstName} {identity.lastName}. I'm a {identity.title} at {identity.company} based in {identity.location},
    with {identity.yearsExperience} years of experience in software development and technology integration.
  </p>

  <p>
    I'm passionate about building scalable data systems and have a natural aptitude for process optimization,
    application design, and metrics analysis. I hold a degree from {identity.education}.
  </p>

  <h3 class="section-title">What I Do</h3>
  <p>
    At Meta, I lead data-driven initiatives and collaborate with teams to architect and deploy machine learning models
    and data pipelines. I also serve as a Tech Advisor for the Insight Data Engineering Fellowship, where I mentor
    fellows in building cutting-edge data pipelines and help them make successful transitions to data engineering careers.
  </p>

  <h3 class="section-title">Technical Skills</h3>
  <ul>
    {skills.map((skill) => <li class="skill">{skill}</li>)}
  </ul>

  <h3 class="section-title">Interests</h3>
  <ul>
    {interests.map((interest) => <li>{interest}</li>)}
  </ul>

  <h3 class="section-title">Let's Connect</h3>
  <p>
    Feel free to reach out on <a href="https://www.linkedin.com/in/kylealanschmidt/" target="_blank" rel="noopener">LinkedIn</a>
    or check out my work on <a href="https://github.com/k-schmidt" target="_blank" rel="noopener">GitHub</a>.
  </p>
</BaseLayout>
